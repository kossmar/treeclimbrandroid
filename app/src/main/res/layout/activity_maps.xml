<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="com.markoss.treeclimbrandroid.com.markoss.treeclimbrandroid.MapsActivity" />

    <Button
        android:id="@+id/treelist_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/mytreesbutton"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:textSize="10sp" />

    <Button
        android:id="@+id/location_button"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/treelist_button"
        android:layout_below="@+id/treelist_button"
        android:layout_marginTop="8dp"
        android:background="@drawable/treeatuserloc"
        android:padding="8dp"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="10sp" />

</RelativeLayout>